{
  "name": "pritcha",
  "version": "1.0.0",
  "repository": "https://github.com/olga-urentseva/pritcha.git",
  "author": "Olga Urentseva <lelyalelya9666@gmail.com>",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "start": "run-p watch serve",
    "serve": "cd public && http-server",
    "build": "run-p build:views build:styles",
    "watch": "run-p watch:views watch:styles",
    "build:views": "pug -o public src/views/pages",
    "build:styles": "sass src/styles:public/styles",
    "watch:views": "pug -w -o public src/views/pages",
    "watch:styles": "sass --watch src/styles:public/styles"
  },
  "devDependencies": {
    "http-server": "^0.12.0",
    "npm-run-all": "^4.1.5",
    "pug-cli": "^1.0.0-alpha6",
    "sass": "^1.25.0"
  }
}
